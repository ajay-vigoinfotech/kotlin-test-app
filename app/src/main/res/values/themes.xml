<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TestApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- White theme customization for app content only -->
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>

        <!-- Keep status bar with system default appearance -->
        <item name="android:statusBarColor">@android:color/holo_blue_bright</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Ensure status bar is visible -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Theme.TestApp" parent="Base.Theme.TestApp" />
</resources>